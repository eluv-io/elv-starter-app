{
  "extends": ["stylelint-config-standard-scss"],
  "ignoreFiles": ["src/static/stylesheets/reset.scss"],
  "rules": {
    "string-quotes": "double",
    "at-rule-empty-line-before": null,
    "max-nesting-depth": 3,
    "number-leading-zero": null,
    "selector-class-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*$"
  }
}
